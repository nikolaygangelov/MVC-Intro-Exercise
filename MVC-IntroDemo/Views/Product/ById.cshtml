// this directive makes the model available to the view
@model ProductViewModel 

@{
	ViewData["Title"] = $"Product N.{Model.Id}";
}

<div class="card">
	<div class="card-header">@ViewData["Title"]</div>
	<div class="card-body">
			<h5>Product Name: @Model.Name</h5> //actual product passed by method View() in action ById of ProductController
			<p>Price:@Model.Price lv.</p>
	</div>
</div>

@{
	ViewData["Title"] = $"Nums 1...{ViewBag.Count}";
}

<h2>@ViewData["Title"]</h2>
<ul>
	@for (int i = 1; i <= ViewBag.Count; i++)
	{
			<li>@i</li>
	}
</ul>

<form asp-controller="Home" asp-action="NumbersToN" method="post"> @*which controller and action should be accessed*@
	<div class="row">
		<div class="col-2">
			<input class="form-control" type="number" min="0" step="1" name="count"/> @*binds request data to action parameters by name (model binding)*@
		</div>
		<div class="col-2">
			<button>Submit</button>
		</div>
	</div>
</form>
